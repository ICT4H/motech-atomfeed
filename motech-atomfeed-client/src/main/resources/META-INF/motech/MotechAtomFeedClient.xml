<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       xmlns:context="http://www.springframework.org/schema/context">
    <context:annotation-config />
    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor"/>
    <bean class="org.ict4htw.atomfeed.motechclient.AtomClient" id="atomClient">
        <constructor-arg>
            <bean class="java.net.URI">
                <constructor-arg type="java.lang.String">
                    <value>http://localhost:8080/events/recent</value>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg>
            <bean class="org.ict4htw.atomfeed.client.repository.datasource.WebClient"></bean>
        </constructor-arg>
        <constructor-arg>
            <null />
        </constructor-arg>
    </bean>
</beans>